{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist",
        "withGlobalTauri": true
    },
    "package": {
        "productName": "Stories",
        "version": "0.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "os": {
                "all": false
            },
            "shell": {
                "all": false,
                "open": true
            },
            "fs": {
                "all": true,
                "scope": [
                    "$APP/*",
                    "$DESKTOP/*"
                ]
            },
            "path": {
                "all": true
            }
        },
        "bundle": {
            "active": true,
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ],
            "identifier": "com.stories.dev",
            "targets": "all",
            "macOS": {
                "entitlements": "./entitlements.mac.plist",
                "minimumSystemVersion": "13.4"
            }
        },
        "security": {
            "csp": null
        },
        "updater": {
            "active": false
        },
        "windows": [
            {
                "titleBarStyle": "Visible",
                "fullscreen": false,
                "resizable": true,
                "title": "Stories",
                "width": 1280,
                "height": 800,
                "closable": true,
                "hiddenTitle": true
            }
        ]
    }
}
